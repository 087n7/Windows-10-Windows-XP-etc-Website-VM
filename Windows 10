                <p>This is a placeholder for the Paint application.</p>
            </div>
        </div>

        <div id="shutdown-screen">
            <div class="shutdown-content">
                <img id="shutdown-logo" src="https://img.icons8.com/ios/100/ffffff/windows-10.png" alt="Windows logo">
                <div class="loading-dots">
                    <span>.</span>
                    <span>.</span>
                    <span>.</span>
                </div>
            </div>
        </div>
    </div>

    <div id="context-menu">
        <div class="context-menu-item">
            <i class="fas fa-plus"></i>
            <span>New</span>
        </div>
        <div class="context-menu-item">
            <i class="fas fa-sync-alt"></i>
            <span>Refresh</span>
        </div>
        <div class="context-menu-item">
            <i class="fas fa-cogs"></i>
            <span>Display settings</span>
        </div>
        <div class="context-menu-item">
            <i class="fas fa-palette"></i>
            <span>Personalize</span>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const loginBtn = document.getElementById('login-btn');
            const passwordInput = document.getElementById('password-input');
            const loginScreen = document.getElementById('login-screen');
            const desktopContainer = document.getElementById('desktop-container');
            const startButton = document.getElementById('start-button');
            const startMenu = document.getElementById('start-menu');
            const shutdownScreen = document.getElementById('shutdown-screen');
            const taskbarTime = document.getElementById('taskbarTime');
            const desktop = document.getElementById('desktop');
            const contextMenu = document.getElementById('context-menu');
            const customCursor = document.getElementById('custom-cursor');

            const sleepButton = document.getElementById('sleep-button');
            const restartButton = document.getElementById('restart-button');
            const shutdownButton = document.getElementById('shutdown-button');

            const windows = document.querySelectorAll('.window');
            const taskbarIcons = document.getElementById('taskbar-icons');
            let activeWindow = null;

            // Hide the custom cursor initially
            customCursor.style.display = 'none';

            // Custom cursor logic
            document.addEventListener('mousemove', (e) => {
                if (customCursor.style.display !== 'none') {
                    customCursor.style.transform = `translate(${e.clientX}px, ${e.clientY}px)`;
                }
            });

            // Login logic
            loginBtn.addEventListener('click', () => {
                login();
            });

            passwordInput.addEventListener('keydown', (e) => {
                if (e.key === 'Enter') {
                    login();
                }
            });

            function login() {
                const password = passwordInput.value;
                const loginMessage = document.getElementById('login-message');
                if (password === 'password') {
                    loginMessage.style.display = 'none';
                    document.querySelector('.login-box').style.display = 'none';
                    document.querySelector('.loading-text').style.display = 'block';
                    document.querySelector('.progress-bar-container').style.display = 'block';
                    document.querySelector('.progress-bar').style.width = '100%';

                    setTimeout(() => {
                        loginScreen.classList.add('fade-out');
                        desktopContainer.style.display = 'block';
                        document.body.style.cursor = 'default';
                        customCursor.style.display = 'none';

                        setTimeout(() => {
                            loginScreen.style.display = 'none';
                            document.querySelector('.login-box').style.display = 'flex';
                            document.querySelector('.loading-text').style.display = 'none';
                            document.querySelector('.progress-bar-container').style.display = 'none';
                            document.querySelector('.progress-bar').style.width = '0';
                            passwordInput.value = '';
                        }, 500);
                    }, 3000);
                } else {
                    loginMessage.style.display = 'block';
                }
            }

            // Power button functionality
            sleepButton.addEventListener('click', () => {
                startMenu.style.display = 'none';
                const sleepOverlay = document.createElement('div');
                sleepOverlay.style.cssText = `
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background-color: rgba(0, 0, 0, 0.95);
                    color: white;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    font-size: 2em;
                    z-index: 5000;
                    opacity: 0;
                    transition: opacity 1s ease-in-out;
                    cursor: pointer;
                `;
                sleepOverlay.innerHTML = `
                    <div style="text-align: center;">
                        <p>Sleeping...</p>
                        <p style="font-size: 0.5em; opacity: 0.7;">Click to wake up</p>
                    </div>
                `;
                document.body.appendChild(sleepOverlay);
                setTimeout(() => sleepOverlay.style.opacity = '1', 10);

                sleepOverlay.addEventListener('click', () => {
                    sleepOverlay.style.opacity = '0';
                    setTimeout(() => {
                        document.body.removeChild(sleepOverlay);
                    }, 1000);
                });
            });

            restartButton.addEventListener('click', () => {
                startMenu.style.display = 'none';
                shutdownScreen.style.display = 'flex';
                setTimeout(() => shutdownScreen.style.opacity = '1', 10);

                setTimeout(() => {
                    shutdownScreen.style.opacity = '0';
                    setTimeout(() => {
                        shutdownScreen.style.display = 'none';
                        loginScreen.style.display = 'flex';
                        loginScreen.style.opacity = '1';
                        loginScreen.classList.remove('fade-out');
                        loginScreen.classList.remove('loading');
                        passwordInput.value = '';
                        document.querySelector('.login-box').style.display = 'flex';
                    }, 1000);
                }, 3000);
            });

            shutdownButton.addEventListener('click', () => {
                startMenu.style.display = 'none';
                shutdownScreen.style.display = 'flex';
                setTimeout(() => shutdownScreen.style.opacity = '1', 10);
            });


            // Start menu toggle
            startButton.addEventListener('click', (e) => {
                e.stopPropagation();
                startMenu.style.display = startMenu.style.display === 'block' ? 'none' : 'flex';
            });

            document.addEventListener('click', () => {
                startMenu.style.display = 'none';
                contextMenu.style.display = 'none';
            });

            // Prevent start menu from closing on internal clicks
            startMenu.addEventListener('click', (e) => {
                e.stopPropagation();
            });

            // Time and date logic
            function updateTime() {
                const now = new Date();
                const time = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
                const date = now.toLocaleDateString('en-US', { day: '2-digit', month: '2-digit', year: 'numeric' });
                taskbarTime.innerHTML = `${time}<br>${date}`;
            }
            setInterval(updateTime, 1000);
            updateTime();

            // Window management
            const desktopIcons = document.querySelectorAll('.desktop .icon, .start-menu-app');
            desktopIcons.forEach(icon => {
                icon.addEventListener('dblclick', (e) => {
                    e.stopPropagation();
                    const windowTargetId = icon.dataset.windowTarget;
                    const targetWindow = document.querySelector(windowTargetId);
                    if (targetWindow) {
                        openWindow(targetWindow);
                    }
                });
            });

            function openWindow(win) {
                bringToFront(win);
                win.style.display = 'flex';
                updateTaskbar(win, 'open');
            }

            function bringToFront(win) {
                windows.forEach(w => w.classList.remove('active'));
                win.classList.add('active');
                win.style.zIndex = '2000';
                activeWindow = win;
            }

            function updateTaskbar(win, action) {
                const appName = win.dataset.appName;
                let taskbarItem = document.querySelector(`.taskbar-item[data-app-name="${appName}"]`);
                if (!taskbarItem) {
                    // Create a new taskbar item if it doesn't exist
                    const newIcon = document.createElement('div');
                    newIcon.classList.add('taskbar-item');
                    newIcon.dataset.appName = appName;
                    newIcon.dataset.windowTarget = `#${win.id}`;
                    newIcon.innerHTML = `<img src="${win.querySelector('img') ? win.querySelector('img').src : 'https://img.icons8.com/color/96/000000/default-app.png'}" alt="${appName}">`;
                    taskbarIcons.appendChild(newIcon);
                    taskbarItem = newIcon;
                    newIcon.addEventListener('click', () => {
                        if (win.style.display === 'flex') {
                            if (activeWindow === win) {
                                win.style.display = 'none';
                                newIcon.classList.remove('active');
                            } else {
                                bringToFront(win);
                            }
                        } else {
                            openWindow(win);
                        }
                    });
                }

                if (action === 'open') {
                    document.querySelectorAll('.taskbar-item').forEach(item => item.classList.remove('active'));
                    taskbarItem.classList.add('active');
                } else if (action === 'close') {
                    taskbarItem.classList.remove('active');
                    if (taskbarItem.dataset.permanent !== 'true') {
                        // Keep a permanent item (like File Explorer) on the taskbar even if closed
                        taskbarItem.remove();
                    }
                }
            }

            windows.forEach(win => {
                win.addEventListener('mousedown', () => bringToFront(win));

                const titleBar = win.querySelector('.window-title-bar');
                const closeBtn = win.querySelector('.close-btn');
                const minimizeBtn = win.querySelector('.minimize-btn');
                const maximizeBtn = win.querySelector('.maximize-btn');

                closeBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    win.style.display = 'none';
                    updateTaskbar(win, 'close');
                });

                minimizeBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    win.style.display = 'none';
                    document.querySelector(`.taskbar-item[data-window-target="#${win.id}"]`).classList.remove('active');
                });

                maximizeBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    win.classList.toggle('maximized');
                    maximizeBtn.innerHTML = win.classList.contains('maximized') ? '<i class="fas fa-window-restore"></i>' : '<i class="fas fa-window-maximize"></i>';
                });

                // Window dragging
                let isDragging = false;
                let offsetX, offsetY;

                titleBar.addEventListener('mousedown', (e) => {
                    if (win.classList.contains('maximized')) return;
                    isDragging = true;
                    offsetX = e.clientX - win.offsetLeft;
                    offsetY = e.clientY - win.offsetTop;
                    bringToFront(win);
                });

                desktop.addEventListener('mousemove', (e) => {
                    if (isDragging) {
                        win.style.left = `${e.clientX - offsetX}px`;
                        win.style.top = `${e.clientY - offsetY}px`;
                    }
                });

                desktop.addEventListener('mouseup', () => {
                    isDragging = false;
                });
            });

            // Context menu
            desktop.addEventListener('contextmenu', (e) => {
                e.preventDefault();
                contextMenu.style.left = `${e.clientX}px`;
                contextMenu.style.top = `${e.clientY}px`;
                contextMenu.style.display = 'block';
            });
        });
    </script>
</body>

</html>
