        <div class="window" id="calculator-window" data-app-name="Calculator">
            <div class="window-title-bar">
                <span>Calculator</span>
                <div class="window-title-buttons">
                    <button class="minimize-btn"><i class="fas fa-window-minimize"></i></button>
                    <button class="maximize-btn"><i class="fas fa-window-maximize"></i></button>
                    <button class="close-btn"><i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="window-content">
                <h3>Basic Calculator</h3>
                <input type="text" id="calculator-display" readonly style="width: 100%; height: 40px; font-size: 2em; text-align: right; margin-bottom: 10px;">
                <div class="calculator-buttons" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 10px;">
                    <button>7</button>
                    <button>8</button>
                    <button>9</button>
                    <button>+</button>
                    <button>4</button>
                    <button>5</button>
                    <button>6</button>
                    <button>-</button>
                    <button>1</button>
                    <button>2</button>
                    <button>3</button>
                    <button>*</button>
                    <button>C</button>
                    <button>0</button>
                    <button>=</button>
                    <button>/</button>
                </div>
            </div>
        </div>
    </div>

    <div id="shutdown-screen">
        <div class="shutdown-content">
            <img src="https://img.icons8.com/color/96/000000/windows-10.png" alt="Windows Logo" style="width: 128px; filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.5));">
            <h1>Shutting down</h1>
            <div class="loading-dots">
                <span>.</span><span>.</span><span>.</span>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const loginBtn = document.getElementById('login-btn');
            const passwordInput = document.getElementById('password-input');
            const loginScreen = document.getElementById('login-screen');
            const loadingText = document.querySelector('.loading-text');
            const progressBarContainer = document.querySelector('.progress-bar-container');
            const progressBar = document.querySelector('.progress-bar');
            const desktopContainer = document.getElementById('desktop-container');
            const taskbarIconsContainer = document.getElementById('taskbar-icons');
            const startButton = document.getElementById('start-button');
            const startMenu = document.getElementById('start-menu');
            const allApps = document.querySelectorAll('[data-window-target]');
            const taskbarTime = document.getElementById('taskbarTime');
            const shutdownButton = document.getElementById('shutdown-button');
            const shutdownScreen = document.getElementById('shutdown-screen');
            const restartButton = document.getElementById('restart-button');

            let activeWindow = null;
            let zIndexCounter = 2000;

            const updateTime = () => {
                const now = new Date();
                const hours = now.getHours();
                const minutes = now.getMinutes();
                const ampm = hours >= 12 ? 'PM' : 'AM';
                const formattedHours = hours % 12 || 12;
                const formattedMinutes = minutes < 10 ? '0' + minutes : minutes;
                const date = now.toLocaleDateString();
                taskbarTime.innerHTML = `${formattedHours}:${formattedMinutes} ${ampm}<br>${date}`;
            };
            setInterval(updateTime, 1000);
            updateTime();

            // Login Logic
            const login = () => {
                loginScreen.classList.add('loading');
                document.querySelector('.login-box').style.display = 'none';
                loadingText.style.display = 'block';
                progressBarContainer.style.display = 'block';
                setTimeout(() => {
                    progressBar.style.width = '100%';
                    loadingText.textContent = "Getting things ready for you...";
                }, 500);

                setTimeout(() => {
                    loginScreen.classList.add('fade-out');
                    setTimeout(() => {
                        loginScreen.style.display = 'none';
                        desktopContainer.style.display = 'block';
                    }, 500);
                }, 4000);
            };

            const checkPassword = () => {
                if (passwordInput.value === "password") {
                    login();
                } else {
                    const loginMessage = document.getElementById('login-message');
                    loginMessage.style.display = 'block';
                    setTimeout(() => {
                        loginMessage.style.display = 'none';
                    }, 2000);
                }
            };

            loginBtn.addEventListener('click', checkPassword);
            passwordInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    checkPassword();
                }
            });

            // Start Menu Logic
            startButton.addEventListener('click', (e) => {
                e.stopPropagation();
                startMenu.style.display = startMenu.style.display === 'flex' ? 'none' : 'flex';
            });

            document.addEventListener('click', (e) => {
                if (!startMenu.contains(e.target) && e.target !== startButton) {
                    startMenu.style.display = 'none';
                }
            });

            // Window Management
            const windows = document.querySelectorAll('.window');
            let isDragging = false;
            let offsetX, offsetY;
            let currentWindow = null;

            const bringToFront = (windowElement) => {
                windows.forEach(win => win.classList.remove('active'));
                zIndexCounter++;
                windowElement.style.zIndex = zIndexCounter;
                windowElement.classList.add('active');
                updateTaskbarActiveState(windowElement.dataset.appName, true);
            };

            const openWindow = (windowId, appName) => {
                const windowElement = document.querySelector(windowId);
                if (!windowElement) return;

                bringToFront(windowElement);
                windowElement.style.display = 'flex';
                windowElement.classList.remove('minimized');
                updateTaskbar(windowId, appName);
            };

            const updateTaskbar = (windowId, appName) => {
                const existingTaskbarItem = taskbarIconsContainer.querySelector(`[data-window-target="${windowId}"]`);
                if (!existingTaskbarItem) {
                    const appIconElement = document.querySelector(`[data-window-target="${windowId}"] img`);
                    if (appIconElement) {
                        const newTaskbarItem = document.createElement('div');
                        newTaskbarItem.className = 'taskbar-item';
                        newTaskbarItem.dataset.windowTarget = windowId;
                        newTaskbarItem.dataset.appName = appName;
                        newTaskbarItem.innerHTML = `<img src="${appIconElement.src}" alt="${appName}">`;
                        taskbarIconsContainer.appendChild(newTaskbarItem);
                        newTaskbarItem.addEventListener('click', (e) => {
                            const targetWindow = document.querySelector(windowId);
                            if (targetWindow.classList.contains('minimized') || targetWindow.style.display === 'none') {
                                openWindow(windowId, appName);
                            } else {
                                targetWindow.classList.add('minimized');
                                updateTaskbarActiveState(appName, false);
                            }
                        });
                    }
                }
                updateTaskbarActiveState(appName, true);
            };

            const updateTaskbarActiveState = (appName, isActive) => {
                document.querySelectorAll('.taskbar-item').forEach(item => {
                    if (item.dataset.appName === appName) {
                        item.classList.toggle('active', isActive);
                    } else {
                        item.classList.remove('active');
                    }
                });
            };

            const closeWindow = (windowId, appName) => {
                const windowElement = document.querySelector(windowId);
                windowElement.style.display = 'none';
                windowElement.classList.remove('minimized', 'maximized');
                windowElement.style.top = '10%';
                windowElement.style.left = '20%';
                windowElement.style.width = '500px';
                windowElement.style.height = '400px';
                windowElement.style.zIndex = 999;
                
                const taskbarItem = taskbarIconsContainer.querySelector(`[data-window-target="${windowId}"]:not([data-default-app])`);
                if (taskbarItem) {
                    taskbarItem.remove();
                }
                updateTaskbarActiveState(appName, false);
            };

            const minimizeWindow = (windowElement) => {
                windowElement.classList.add('minimized');
                updateTaskbarActiveState(windowElement.dataset.appName, false);
            };

            const maximizeWindow = (windowElement) => {
                windowElement.classList.toggle('maximized');
            };

            document.querySelectorAll('.window').forEach(windowElement => {
                const titleBar = windowElement.querySelector('.window-title-bar');
                const closeBtn = windowElement.querySelector('.close-btn');
                const minimizeBtn = windowElement.querySelector('.minimize-btn');
                const maximizeBtn = windowElement.querySelector('.maximize-btn');

                titleBar.addEventListener('mousedown', (e) => {
                    if (!windowElement.classList.contains('maximized')) {
                        isDragging = true;
                        currentWindow = windowElement;
                        offsetX = e.clientX - windowElement.getBoundingClientRect().left;
                        offsetY = e.clientY - windowElement.getBoundingClientRect().top;
                        bringToFront(currentWindow);
                    }
                });

                windowElement.addEventListener('mousedown', () => {
                    bringToFront(windowElement);
                });

                closeBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    closeWindow(`#${windowElement.id}`, windowElement.dataset.appName);
                });

                minimizeBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    minimizeWindow(windowElement);
                });

                maximizeBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    maximizeWindow(windowElement);
                });
            });

            document.addEventListener('mousemove', (e) => {
                if (!isDragging || !currentWindow) return;
                currentWindow.style.left = `${e.clientX - offsetX}px`;
                currentWindow.style.top = `${e.clientY - offsetY}px`;
            });

            document.addEventListener('mouseup', () => {
                isDragging = false;
                currentWindow = null;
            });

            // App Launchers
            allApps.forEach(app => {
                const windowId = app.dataset.windowTarget;
                const appName = app.dataset.appName;
                app.addEventListener('click', () => {
                    if (app.closest('#start-menu')) {
                        openWindow(windowId, appName);
                        startMenu.style.display = 'none';
                    }
                });
                app.addEventListener('dblclick', (e) => {
                    if (app.closest('#desktop')) {
                        openWindow(windowId, appName);
                    }
                });
            });

            // Taskbar items that open windows (default apps)
            document.querySelectorAll('.taskbar-item[data-default-app]').forEach(item => {
                item.addEventListener('click', () => {
                    const windowId = item.dataset.windowTarget;
                    const appName = item.dataset.appName;
                    const targetWindow = document.querySelector(windowId);
                    if (targetWindow.style.display === 'flex' && !targetWindow.classList.contains('minimized')) {
                        bringToFront(targetWindow);
                    } else {
                        openWindow(windowId, appName);
                    }
                });
            });

            // Shut down functionality
            shutdownButton.addEventListener('click', () => {
                document.body.style.cursor = 'default';
                document.getElementById('custom-cursor').style.display = 'none';
                desktopContainer.style.display = 'none';
                shutdownScreen.style.display = 'flex';
                setTimeout(() => {
                    shutdownScreen.classList.add('visible');
                }, 10);
            });
            
            // Restart functionality (reloads the page)
            restartButton.addEventListener('click', () => {
                document.body.style.cursor = 'default';
                document.getElementById('custom-cursor').style.display = 'none';
                desktopContainer.style.display = 'none';
                shutdownScreen.style.display = 'flex';
                shutdownScreen.querySelector('h1').textContent = 'Restarting';
                setTimeout(() => {
                    shutdownScreen.classList.add('visible');
                }, 10);
                setTimeout(() => {
                    location.reload();
                }, 2000);
            });

            // Custom Cursor
            const customCursor = document.createElement('div');
            customCursor.id = 'custom-cursor';
            document.body.appendChild(customCursor);
            document.body.addEventListener('mousemove', (e) => {
                customCursor.style.left = `${e.clientX}px`;
                customCursor.style.top = `${e.clientY}px`;
            });

            // Calculator logic
            const calcDisplay = document.getElementById('calculator-display');
            const calcButtons = document.querySelectorAll('#calculator-window .calculator-buttons button');
            let currentInput = '';
            let operator = null;
            let firstOperand = null;

            calcButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const value = button.textContent;
                    if (value >= '0' && value <= '9') {
                        currentInput += value;
                        calcDisplay.value = currentInput;
                    } else if (value === 'C') {
                        currentInput = '';
                        operator = null;
                        firstOperand = null;
                        calcDisplay.value = '';
                    } else if (value === '=') {
                        if (operator && firstOperand !== null) {
                            const secondOperand = parseFloat(currentInput);
                            let result;
                            if (operator === '+') result = firstOperand + secondOperand;
                            if (operator === '-') result = firstOperand - secondOperand;
                            if (operator === '*') result = firstOperand * secondOperand;
                            if (operator === '/') result = firstOperand / secondOperand;
                            calcDisplay.value = result;
                            currentInput = result.toString();
                            firstOperand = null;
                            operator = null;
                        }
                    } else { // Operator
                        if (currentInput !== '') {
                            firstOperand = parseFloat(currentInput);
                            operator = value;
                            currentInput = '';
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>
