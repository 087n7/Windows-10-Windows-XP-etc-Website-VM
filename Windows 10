                            <span>Calculator</span>
                        </div>
                        <div class="start-menu-app" data-window-target="#notepad-window">
                            <img src="https://img.icons8.com/color/48/000000/notepad.png" alt="Notepad">
                            <span>Notepad</span>
                        </div>
                    </div>
                </div>
                <div class="start-menu-power-options">
                    <div class="start-menu-power-option" id="sleep-button">
                        <i class="fa-solid fa-moon"></i>
                        <span>Sleep</span>
                    </div>
                    <div class="start-menu-power-option" id="restart-button">
                        <i class="fa-solid fa-redo-alt"></i>
                        <span>Restart</span>
                    </div>
                    <div class="start-menu-power-option" id="shutdown-button">
                        <i class="fa-solid fa-power-off"></i>
                        <span>Shut Down</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="window" id="file-explorer-window" data-app-name="File Explorer">
            <div class="window-title-bar">
                <span>File Explorer</span>
                <div class="window-title-buttons">
                    <button class="minimize-btn"><i class="fas fa-window-minimize"></i></button>
                    <button class="maximize-btn"><i class="fas fa-window-maximize"></i></button>
                    <button class="close-btn"><i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="window-content file-explorer-content">
                <div class="file-explorer-toolbar">
                    <button><i class="fas fa-arrow-left"></i></button>
                    <button><i class="fas fa-arrow-right"></i></button>
                    <input type="text" value="C:\Users\User\Desktop">
                    <button><i class="fas fa-sync-alt"></i></button>
                </div>
                <div class="file-explorer-grid">
                    <div class="file-explorer-item">
                        <img src="https://img.icons8.com/color/96/000000/folder--v1.png" alt="Documents">
                        <span>Documents</span>
                    </div>
                    <div class="file-explorer-item">
                        <img src="https://img.icons8.com/color/96/000000/picture--v1.png" alt="Pictures">
                        <span>Pictures</span>
                    </div>
                    <div class="file-explorer-item">
                        <img src="https://img.icons8.com/color/96/000000/music-folder.png" alt="Music">
                        <span>Music</span>
                    </div>
                    <div class="file-explorer-item">
                        <img src="https://img.icons8.com/color/96/000000/video-folder.png" alt="Videos">
                        <span>Videos</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="window" id="documents-window" data-app-name="Documents">
            <div class="window-title-bar">
