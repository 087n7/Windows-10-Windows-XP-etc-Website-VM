        </div>

        <div class="window" id="calculator-window" data-app-name="Calculator">
            <div class="window-title-bar">
                <span>Calculator</span>
                <div class="window-title-buttons">
                    <button class="minimize-btn"><i class="fas fa-window-minimize"></i></button>
                    <button class="maximize-btn"><i class="fas fa-window-maximize"></i></button>
                    <button class="close-btn"><i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="window-content">
                <h3>Calculator Mockup</h3>
                <p>1 + 1 = 2 (Trust me).</p>
            </div>
        </div>
    </div>
    <div id="shutdown-screen">
        <div class="shutdown-content">
            <img src="https://img.icons8.com/fluency/96/000000/windows-10.png" alt="Windows Logo" style="width: 80px; filter: grayscale(1);">
            <p>Shutting down</p>
            <div class="loading-dots">
                <span>.</span><span>.</span><span>.</span>
            </div>
        </div>
    </div>
    <div id="context-menu">
        <div class="context-menu-item">
            <i class="fas fa-desktop"></i>
            <span>View</span>
        </div>
        <div class="context-menu-item">
            <i class="fas fa-sort-alpha-down"></i>
            <span>Sort by</span>
        </div>
        <div class="context-menu-item">
            <i class="fas fa-sync-alt"></i>
            <span>Refresh</span>
        </div>
        <hr style="margin: 5px 0;">
        <div class="context-menu-item">
            <i class="fas fa-terminal"></i>
            <span>Open in Terminal</span>
        </div>
        <div class="context-menu-item">
            <i class="fas fa-plus"></i>
            <span>New</span>
        </div>
        <hr style="margin: 5px 0;">
        <div class="context-menu-item">
            <i class="fas fa-cog"></i>
            <span>Display settings</span>
        </div>
        <div class="context-menu-item">
            <i class="fas fa-image"></i>
            <span>Personalize</span>
        </div>
    </div>
    <div id="custom-cursor"></div>
    <script>
        const loginScreen = document.getElementById('login-screen');
        const loginBtn = document.getElementById('login-btn');
        const passwordInput = document.getElementById('password-input');
        const loginMessage = document.getElementById('login-message');
        const loadingText = document.querySelector('.loading-text');
        const progressBarContainer = document.querySelector('.progress-bar-container');
        const progressBar = document.querySelector('.progress-bar');
        const desktopContainer = document.getElementById('desktop-container');
        const startButton = document.getElementById('start-button');
        const startMenu = document.getElementById('start-menu');
        const shutdownButton = document.getElementById('shutdown-button');
        const restartButton = document.getElementById('restart-button');
        const shutdownScreen = document.getElementById('shutdown-screen');
        const myComputerIcon = document.getElementById('my-computer-icon');
        const fileExplorerIcon = document.getElementById('file-explorer-icon');
        const customCursor = document.getElementById('custom-cursor');
        const desktop = document.getElementById('desktop');
        const contextMenu = document.getElementById('context-menu');
        const taskbarIcons = document.getElementById('taskbar-icons');
        let zIndexCounter = 2000;
        let activeWindow = null;
        let windows = {};
        let isDragging = false;
        let currentWindow;
        let offsetX, offsetY;
        let isResizing = false;
        let initialMouseX, initialMouseY, initialWidth, initialHeight, initialTop, initialLeft;
        const resizeHandleSize = 10;
        let resizeDirection = '';

        // Update time
        function updateTime() {
            const now = new Date();
            const time = now.toLocaleTimeString('en-US', {
                hour: 'numeric',
                minute: 'numeric',
                hour12: true
            });
            const date = now.toLocaleDateString('en-US', {
                month: 'short',
                day: 'numeric'
            });
            document.getElementById('taskbarTime').innerHTML = `${time}<br>${date}`;
        }
        setInterval(updateTime, 1000);
        updateTime();

        // Login functionality
        loginBtn.addEventListener('click', () => {
            if (passwordInput.value === 'password') {
                loginScreen.classList.add('loading');
                loginMessage.style.display = 'none';
                loadingText.style.display = 'block';
                progressBarContainer.style.display = 'block';
                setTimeout(() => {
                    progressBar.style.width = '100%';
                }, 100);

                setTimeout(() => {
                    loginScreen.classList.add('fade-out');
                    setTimeout(() => {
                        desktopContainer.style.display = 'block';
                    }, 500);
                }, 3500);
            } else {
                loginMessage.style.display = 'block';
                passwordInput.value = '';
            }
        });

        // Start Menu functionality
        startButton.addEventListener('click', (event) => {
            event.stopPropagation();
            startMenu.style.display = startMenu.style.display === 'flex' ? 'none' : 'flex';
        });

        document.addEventListener('click', (event) => {
            if (!startMenu.contains(event.target) && event.target !== startButton) {
                startMenu.style.display = 'none';
            }
        });

        // Window functionality
        function openWindow(windowId, appName) {
            const window = document.getElementById(windowId);
            if (!window) return;

            // Check if window already exists in the DOM
            if (!document.body.contains(window)) {
                document.body.appendChild(window);
            }

            // Bring to front
            zIndexCounter++;
            window.style.zIndex = zIndexCounter;
            window.classList.add('active');
            if (activeWindow) {
                activeWindow.classList.remove('active');
            }
            activeWindow = window;

            window.style.display = 'flex';
            window.style.top = '10%';
            window.style.left = '20%';
            window.style.width = '500px';
            window.style.height = '400px';

            if (!windows[windowId]) {
                const taskbarItem = document.createElement('div');
                taskbarItem.classList.add('taskbar-item');
                taskbarItem.innerHTML = `<img src="${window.querySelector('img') ? window.querySelector('img').src : 'https://img.icons8.com/color/96/000000/application-window.png'}" alt="${appName}">`;
                taskbarIcons.appendChild(taskbarItem);

                windows[windowId] = {
                    window: window,
                    taskbarItem: taskbarItem
                };

                taskbarItem.addEventListener('click', () => {
                    if (window.style.display === 'none') {
                        window.style.display = 'flex';
                        taskbarItem.classList.add('active');
                        bringToFront(window);
                    } else if (activeWindow === window) {
                        window.style.display = 'none';
                        taskbarItem.classList.remove('active');
                    } else {
                        bringToFront(window);
                    }
                });
            }

            // Remove active class from previous taskbar item and add to current
            document.querySelectorAll('.taskbar-item').forEach(item => item.classList.remove('active'));
            windows[windowId].taskbarItem.classList.add('active');
        }

        function bringToFront(window) {
            zIndexCounter++;
            window.style.zIndex = zIndexCounter;
            if (activeWindow) {
                activeWindow.classList.remove('active');
            }
            activeWindow = window;
            window.classList.add('active');

            // Update taskbar active state
            document.querySelectorAll('.taskbar-item').forEach(item => item.classList.remove('active'));
            const appName = window.dataset.appName;
            for (const id in windows) {
                if (windows[id].window === window) {
                    windows[id].taskbarItem.classList.add('active');
                    break;
                }
            }
        }

        document.querySelectorAll('[data-window-target]').forEach(item => {
            item.addEventListener('click', (event) => {
                const windowId = event.currentTarget.dataset.windowTarget.substring(1);
                const appName = event.currentTarget.dataset.appName;
                openWindow(windowId, appName);
            });
        });

        // Window controls (minimize, maximize, close)
        document.querySelectorAll('.window').forEach(windowEl => {
            const minimizeBtn = windowEl.querySelector('.minimize-btn');
            const maximizeBtn = windowEl.querySelector('.maximize-btn');
            const closeBtn = windowEl.querySelector('.close-btn');
            const titleBar = windowEl.querySelector('.window-title-bar');

            // Minimize
            minimizeBtn.addEventListener('click', () => {
                windowEl.style.display = 'none';
                if (activeWindow === windowEl) {
                    activeWindow = null;
                }
                windows[windowEl.id].taskbarItem.classList.remove('active');
            });

            // Maximize
            maximizeBtn.addEventListener('click', () => {
                windowEl.classList.toggle('maximized');
            });

            // Close
            closeBtn.addEventListener('click', () => {
                windowEl.style.display = 'none';
                if (activeWindow === windowEl) {
                    activeWindow = null;
                }
                const taskbarItem = windows[windowEl.id].taskbarItem;
                if (taskbarItem) {
                    taskbarItem.remove();
                    delete windows[windowEl.id];
                }
            });

            // Dragging
            titleBar.addEventListener('mousedown', (e) => {
                if (e.target.tagName === 'BUTTON' || windowEl.classList.contains('maximized')) {
                    return;
                }
                isDragging = true;
                currentWindow = windowEl;
                bringToFront(currentWindow);
                offsetX = e.clientX - windowEl.offsetLeft;
                offsetY = e.clientY - windowEl.offsetTop;
            });

            windowEl.addEventListener('mousedown', (e) => {
                if (e.target.closest('.window-title-bar')) return;
                bringToFront(windowEl);
            });
        });

        document.addEventListener('mousemove', (e) => {
            if (isDragging) {
                currentWindow.style.left = `${e.clientX - offsetX}px`;
                currentWindow.style.top = `${e.clientY - offsetY}px`;
            }
        });

        document.addEventListener('mouseup', () => {
            isDragging = false;
        });

        // Shutdown functionality
        shutdownButton.addEventListener('click', () => {
            shutdownScreen.style.display = 'flex';
            setTimeout(() => {
                shutdownScreen.classList.add('visible');
            }, 10);
            setTimeout(() => {
                window.close(); // Note: This will only work if the script opened the window
            }, 3000);
        });

        // Restart functionality
        restartButton.addEventListener('click', () => {
            shutdownScreen.style.display = 'flex';
            setTimeout(() => {
                shutdownScreen.classList.add('visible');
            }, 10);
            setTimeout(() => {
                location.reload();
            }, 3000);
        });

        // Custom cursor
        desktopContainer.addEventListener('mousemove', (e) => {
            customCursor.style.left = `${e.clientX}px`;
            customCursor.style.top = `${e.clientY}px`;
        });
        document.body.addEventListener('mouseenter', () => {
            customCursor.style.display = 'block';
        });
        document.body.addEventListener('mouseleave', () => {
            customCursor.style.display = 'none';
        });

        // Right-click context menu
        desktop.addEventListener('contextmenu', (e) => {
            e.preventDefault();
            contextMenu.style.display = 'block';
            contextMenu.style.left = `${e.clientX}px`;
            contextMenu.style.top = `${e.clientY}px`;
        });

        document.addEventListener('click', () => {
            contextMenu.style.display = 'none';
        });

        // Hide context menu on scroll
        window.addEventListener('scroll', () => {
            contextMenu.style.display = 'none';
        });
    </script>
</body>

</html>
