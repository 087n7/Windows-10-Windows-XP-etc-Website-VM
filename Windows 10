    <div id="shutdown-screen">
        <div class="shutdown-content">
            <h1>Shutting Down</h1>
            <div class="loading-dots">
                <span>.</span>
                <span>.</span>
                <span>.</span>
            </div>
        </div>
    </div>

    <div id="custom-cursor"></div>

    <div id="context-menu">
        <div class="context-menu-item"><i class="fas fa-eye"></i> View</div>
        <div class="context-menu-item"><i class="fas fa-sort-amount-down"></i> Sort by</div>
        <div class="context-menu-item"><i class="fas fa-sync-alt"></i> Refresh</div>
        <hr style="margin: 5px 0;">
        <div class="context-menu-item"><i class="fas fa-paste"></i> Paste</div>
        <div class="context-menu-item"><i class="fas fa-paste" style="opacity: 0.5;"></i> Paste shortcut</div>
        <hr style="margin: 5px 0;">
        <div class="context-menu-item"><i class="fas fa-plus"></i> New</div>
        <hr style="margin: 5px 0;">
        <div class="context-menu-item"><i class="fas fa-cogs"></i> Display settings</div>
        <div class="context-menu-item"><i class="fas fa-paint-brush"></i> Personalize</div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const loginScreen = document.getElementById('login-screen');
            const loginBtn = document.getElementById('login-btn');
            const passwordInput = document.getElementById('password-input');
            const loginMessage = document.getElementById('login-message');
            const desktopContainer = document.getElementById('desktop-container');
            const startButton = document.getElementById('start-button');
            const startMenu = document.getElementById('start-menu');
            const taskbarTime = document.getElementById('taskbarTime');
            const shutdownButton = document.getElementById('shutdown-button');
            const shutdownScreen = document.getElementById('shutdown-screen');
            const desktop = document.getElementById('desktop');
            const contextMenu = document.getElementById('context-menu');
            const customCursor = document.getElementById('custom-cursor');
            const taskbarIcons = document.getElementById('taskbar-icons');

            let zIndexCounter = 2001; // Start above login screen

            // Custom Cursor
            document.addEventListener('mousemove', (e) => {
                customCursor.style.left = `${e.clientX}px`;
                customCursor.style.top = `${e.clientY}px`;
            });
            document.addEventListener('mouseenter', () => customCursor.style.opacity = 1);
            document.addEventListener('mouseleave', () => customCursor.style.opacity = 0);
            document.body.style.cursor = 'none';

            // Login Functionality
            loginBtn.addEventListener('click', handleLogin);
            passwordInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    handleLogin();
                }
            });

            function handleLogin() {
                if (passwordInput.value === 'password') {
                    loginScreen.classList.add('loading');
                    loginMessage.style.display = 'none';
                    document.querySelector('.loading-text').style.display = 'block';
                    document.querySelector('.progress-bar-container').style.display = 'block';
                    document.querySelector('.progress-bar').style.width = '100%';

                    setTimeout(() => {
                        loginScreen.classList.add('fade-out');
                        desktopContainer.style.display = 'block';
                        document.body.style.cursor = 'none'; // Ensure custom cursor remains
                        startMenu.style.display = 'none'; // Hide start menu initially
                    }, 2000); // Fakes a 2-second loading time

                    setTimeout(() => {
                        loginScreen.style.display = 'none';
                    }, 2500); // Hides login screen completely after fade out
                } else {
                    loginMessage.style.display = 'block';
                }
            }

            // Taskbar Time
            function updateTime() {
                const now = new Date();
                const timeString = now.toLocaleTimeString([], {
                    hour: '2-digit',
                    minute: '2-digit'
                });
                const dateString = now.toLocaleDateString();
                taskbarTime.innerHTML = `<span>${timeString}</span><span>${dateString}</span>`;
            }
            setInterval(updateTime, 1000);
            updateTime();

            // Start Menu Toggle
            startButton.addEventListener('click', (e) => {
                e.stopPropagation();
                startMenu.style.display = (startMenu.style.display === 'flex') ? 'none' : 'flex';
            });

            // Handle Clicks Outside Start Menu to Close It
            document.addEventListener('click', (e) => {
                if (!startMenu.contains(e.target) && !startButton.contains(e.target)) {
                    startMenu.style.display = 'none';
                }
            });

            // Shutdown/Restart Logic
            shutdownButton.addEventListener('click', () => {
                shutdownScreen.style.display = 'flex';
                setTimeout(() => {
                    shutdownScreen.classList.add('visible');
                    // In a real scenario, this would power off the system or refresh the page.
                    // For this mockup, we'll just reload the page after a delay.
                    setTimeout(() => {
                        window.location.reload();
                    }, 5000);
                }, 100);
            });
            document.getElementById('restart-button').addEventListener('click', () => {
                alert('Restarting...');
                window.location.reload();
            });
            document.getElementById('sleep-button').addEventListener('click', () => {
                alert('Going to sleep...');
            });

            // Window Management
            const allWindows = document.querySelectorAll('.window');
            const allLaunchers = document.querySelectorAll('[data-window-target]');

            allLaunchers.forEach(launcher => {
                launcher.addEventListener('click', () => {
                    const targetId = launcher.getAttribute('data-window-target');
                    const targetWindow = document.querySelector(targetId);
                    const appName = launcher.getAttribute('data-app-name');
                    openWindow(targetWindow, appName);
                });
            });

            function openWindow(windowEl, appName) {
                if (!windowEl) return;
                
                allWindows.forEach(win => win.classList.remove('active'));
                
                windowEl.style.display = 'flex';
                windowEl.classList.add('active');
                windowEl.style.zIndex = ++zIndexCounter;

                // Check for and add to taskbar
                let taskbarItem = document.querySelector(`.taskbar-item[data-app-name="${appName}"]`);
                if (!taskbarItem) {
                    const iconSrc = windowEl.querySelector('.icon img')?.src || windowEl.querySelector('.start-menu-app img')?.src;
                    if (iconSrc) {
                        taskbarItem = document.createElement('div');
                        taskbarItem.className = 'taskbar-item active';
                        taskbarItem.setAttribute('data-window-target', `#${windowEl.id}`);
                        taskbarItem.setAttribute('data-app-name', appName);
                        taskbarItem.innerHTML = `<img src="${iconSrc}" alt="${appName}">`;
                        taskbarIcons.appendChild(taskbarItem);
                        
                        taskbarItem.addEventListener('click', () => {
                            if (windowEl.classList.contains('active')) {
                                minimizeWindow(windowEl);
                            } else {
                                restoreWindow(windowEl);
                            }
                        });
                    }
                }
                updateTaskbarActive(windowEl, true);
            }

            function updateTaskbarActive(windowEl, isActive) {
                const appName = windowEl.getAttribute('data-app-name');
                const taskbarItem = document.querySelector(`.taskbar-item[data-app-name="${appName}"]`);
                if (taskbarItem) {
                    if (isActive) {
                        taskbarItem.classList.add('active');
                    } else {
                        taskbarItem.classList.remove('active');
                    }
                }
            }

            function minimizeWindow(windowEl) {
                windowEl.style.transform = 'scale(0.8) translateY(100px)';
                windowEl.style.opacity = '0';
                windowEl.style.pointerEvents = 'none';
                updateTaskbarActive(windowEl, false);
            }

            function restoreWindow(windowEl) {
                allWindows.forEach(win => win.classList.remove('active'));
                windowEl.classList.add('active');
                windowEl.style.zIndex = ++zIndexCounter;
                windowEl.style.transform = 'scale(1) translateY(0)';
                windowEl.style.opacity = '1';
                windowEl.style.pointerEvents = 'auto';
                updateTaskbarActive(windowEl, true);
            }

            allWindows.forEach(windowEl => {
                const titleBar = windowEl.querySelector('.window-title-bar');
                const minimizeBtn = windowEl.querySelector('.minimize-btn');
                const maximizeBtn = windowEl.querySelector('.maximize-btn');
                const closeBtn = windowEl.querySelector('.close-btn');

                // Dragging
                let isDragging = false;
                let offsetX, offsetY;
                titleBar.addEventListener('mousedown', (e) => {
                    if (windowEl.classList.contains('maximized')) return;
                    isDragging = true;
                    offsetX = e.clientX - windowEl.getBoundingClientRect().left;
                    offsetY = e.clientY - windowEl.getBoundingClientRect().top;
                    windowEl.style.zIndex = ++zIndexCounter;
                    windowEl.classList.add('active');
                    updateTaskbarActive(windowEl, true);
                    e.preventDefault();
                });

                document.addEventListener('mousemove', (e) => {
                    if (!isDragging) return;
                    windowEl.style.left = `${e.clientX - offsetX}px`;
                    windowEl.style.top = `${e.clientY - offsetY}px`;
                });

                document.addEventListener('mouseup', () => {
                    isDragging = false;
                });

                // Window Controls
                minimizeBtn.addEventListener('click', () => minimizeWindow(windowEl));
                maximizeBtn.addEventListener('click', () => {
                    if (windowEl.classList.contains('maximized')) {
                        windowEl.classList.remove('maximized');
                        windowEl.style.removeProperty('width');
                        windowEl.style.removeProperty('height');
                        windowEl.style.removeProperty('top');
                        windowEl.style.removeProperty('left');
                    } else {
                        windowEl.classList.add('maximized');
                    }
                });
                closeBtn.addEventListener('click', () => {
                    windowEl.style.display = 'none';
                    updateTaskbarActive(windowEl, false);
                });
            });

            // Desktop Context Menu
            desktop.addEventListener('contextmenu', (e) => {
                e.preventDefault();
                contextMenu.style.display = 'block';
                contextMenu.style.left = `${e.clientX}px`;
                contextMenu.style.top = `${e.clientY}px`;
            });

            document.addEventListener('click', () => {
                contextMenu.style.display = 'none';
            });
            contextMenu.addEventListener('click', (e) => e.stopPropagation());
        });
    </script>
</body>

</html>
