    </div>
    
    <div id="shutdown-screen">
        <div class="shutdown-content">
            <h1 class="shutdown-text">Shutting Down</h1>
            <div class="loading-dots">
                <span>.</span><span>.</span><span>.</span>
            </div>
        </div>
    </div>

    <div id="custom-cursor"></div>

    <div id="context-menu">
        <div class="context-menu-item" id="change-wallpaper-btn">Change Wallpaper</div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const loginScreen = document.getElementById('login-screen');
            const loginBtn = document.getElementById('login-btn');
            const passwordInput = document.getElementById('password-input');
            const loginMessage = document.getElementById('login-message');
            const loginBox = document.querySelector('.login-box');
            const loadingText = document.querySelector('.loading-text');
            const progressBarContainer = document.querySelector('.progress-bar-container');
            const progressBar = document.querySelector('.progress-bar');
            const desktopContainer = document.getElementById('desktop-container');
            const desktop = document.getElementById('desktop');
            const startMenu = document.getElementById('start-menu');
            const startButton = document.getElementById('start-button');
            const windows = document.querySelectorAll('.window');
            const taskbarTime = document.getElementById('taskbarTime');
            const shutdownButton = document.getElementById('shutdown-button');
            const restartButton = document.getElementById('restart-button');
            const sleepButton = document.getElementById('sleep-button');
            const shutdownScreen = document.getElementById('shutdown-screen');
            const customCursor = document.getElementById('custom-cursor');
            const contextMenu = document.getElementById('context-menu');
            const changeWallpaperBtn = document.getElementById('change-wallpaper-btn');
            let zIndexCounter = 2000;

            const wallpapers = [
                'https://github.com/087n7/Windows-10-Windows-XP-etc-Website-VM/blob/main/windows%2010.png?raw=true',
                'https://github.com/087n7/Windows-10-Windows-XP-etc-Website-VM/blob/main/windows-xp-default.png?raw=true',
                'https://github.com/087n7/Windows-10-Windows-XP-etc-Website-VM/blob/main/windows-7.png?raw=true'
            ];
            let currentWallpaperIndex = 0;

            // --- Custom Cursor ---
            document.body.style.cursor = 'none';
            document.addEventListener('mousemove', (e) => {
                customCursor.style.left = `${e.clientX}px`;
                customCursor.style.top = `${e.clientY}px`;
            });
            
            // --- Context Menu ---
            desktop.addEventListener('contextmenu', (e) => {
                e.preventDefault();
                contextMenu.style.display = 'block';
                contextMenu.style.left = `${e.clientX}px`;
                contextMenu.style.top = `${e.clientY}px`;
            });

            document.addEventListener('click', () => {
                contextMenu.style.display = 'none';
            });

            changeWallpaperBtn.addEventListener('click', () => {
                currentWallpaperIndex = (currentWallpaperIndex + 1) % wallpapers.length;
                desktopContainer.style.backgroundImage = `url('${wallpapers[currentWallpaperIndex]}')`;
            });

            // --- Login Functionality ---
            const handleLogin = () => {
                if (passwordInput.value === 'password') {
                    loginBox.style.display = 'none';
                    loginScreen.classList.add('loading');
                    loadingText.style.display = 'block';
                    progressBarContainer.style.display = 'block';
                    setTimeout(() => {
                        progressBar.style.width = '100%';
                    }, 50);

                    setTimeout(() => {
                        loginScreen.classList.add('fade-out');
                        setTimeout(() => {
                            loginScreen.style.display = 'none';
                            desktopContainer.style.display = 'block';
                        }, 500);
                    }, 2000);
                } else {
                    loginMessage.style.display = 'block';
                }
            };

            loginBtn.addEventListener('click', handleLogin);
            passwordInput.addEventListener('keydown', (e) => {
                if (e.key === 'Enter') {
                    handleLogin();
                }
            });

            // --- Time and Date ---
            function updateTime() {
                const now = new Date();
                const timeStr = now.toLocaleTimeString([], {
                    hour: '2-digit',
                    minute: '2-digit'
                });
                const dateStr = now.toLocaleDateString();
                taskbarTime.innerHTML = `<span>${timeStr}</span><span>${dateStr}</span>`;
            }
            updateTime();
            setInterval(updateTime, 1000);

            // --- Start Menu ---
            startButton.addEventListener('click', (e) => {
                e.stopPropagation();
                startMenu.style.display = startMenu.style.display === 'flex' ? 'none' : 'flex';
            });

            document.addEventListener('click', (e) => {
                if (startMenu.style.display === 'flex' && !startMenu.contains(e.target) && !startButton.contains(e.target)) {
                    startMenu.style.display = 'none';
                }
            });

            // --- Window Management (Dragging, Z-index, Minimize, Maximize, Close) ---
            let activeWindow = null;
            let isDragging = false;
            let initialMouseX, initialMouseY, initialWindowX, initialWindowY;

            desktop.addEventListener('mousedown', (e) => {
                const windowEl = e.target.closest('.window');
                if (windowEl) {
                    windows.forEach(win => {
                        win.classList.remove('active');
                    });
                    windowEl.classList.add('active');
                    windowEl.style.zIndex = zIndexCounter++;
                }

                const titleBar = e.target.closest('.window-title-bar');
                if (titleBar) {
                    activeWindow = titleBar.closest('.window');
                    initialMouseX = e.clientX;
                    initialMouseY = e.clientY;
                    initialWindowX = activeWindow.offsetLeft;
                    initialWindowY = activeWindow.offsetTop;
                    isDragging = true;
                    document.addEventListener('mousemove', onMouseMove);
                    document.addEventListener('mouseup', onMouseUp);
                }
            });

            function onMouseMove(e) {
                if (!isDragging || activeWindow.classList.contains('maximized')) return;
                let dx = e.clientX - initialMouseX;
                let dy = e.clientY - initialMouseY;
                let newX = initialWindowX + dx;
                let newY = initialWindowY + dy;
                newX = Math.max(0, Math.min(window.innerWidth - activeWindow.offsetWidth, newX));
                newY = Math.max(0, Math.min(window.innerHeight - activeWindow.offsetHeight - 56, newY));
                activeWindow.style.left = `${newX}px`;
                activeWindow.style.top = `${newY}px`;
            }

            function onMouseUp() {
                isDragging = false;
                document.removeEventListener('mousemove', onMouseMove);
                document.removeEventListener('mouseup', onMouseUp);
            }

            document.addEventListener('click', (e) => {
                const closeBtn = e.target.closest('.close-btn');
                const minimizeBtn = e.target.closest('.minimize-btn');
                const maximizeBtn = e.target.closest('.maximize-btn');
                const windowTarget = e.target.closest('[data-window-target]');
                const myComputerFolder = e.target.closest('.my-computer-folder');
                
                if (myComputerFolder) {
                    alert(`Opening ${myComputerFolder.dataset.folder}... (This is a mock function)`);
                    return;
                }

                if (windowTarget) {
                    const windowId = windowTarget.dataset.windowTarget;
                    const windowEl = document.querySelector(windowId);
                    if (windowEl) {
                        windows.forEach(win => {
                            win.classList.remove('active');
                        });
                        windowEl.style.display = 'flex';
                        windowEl.classList.add('active');
                        windowEl.style.zIndex = zIndexCounter++;
                        startMenu.style.display = 'none';
                    }
                } else if (closeBtn) {
                    const windowEl = closeBtn.closest('.window');
                    windowEl.style.display = 'none';
                    windowEl.classList.remove('active');
                } else if (minimizeBtn) {
                    const windowEl = minimizeBtn.closest('.window');
                    windowEl.style.display = 'none';
                    windowEl.classList.remove('active');
                } else if (maximizeBtn) {
                    const windowEl = maximizeBtn.closest('.window');
                    windowEl.classList.toggle('maximized');
                }
            });

            // --- Shutdown Logic ---
            const performPowerAction = (action) => {
                const message = `Are you sure you want to ${action}?`;
                if (!confirm(message)) return;

                startMenu.style.display = 'none';
                
                if (action === 'shutdown' || action === 'restart') {
                    desktopContainer.style.display = 'none'; // Hide desktop immediately
                    shutdownScreen.style.display = 'flex';
                    setTimeout(() => shutdownScreen.classList.add('visible'), 100);

                    setTimeout(() => {
                        if (action === 'restart') {
                            window.location.reload();
                        } else {
                            alert(`The system has shut down. To restart, refresh the page.`);
                        }
                    }, 4000);
                } else if (action === 'sleep') {
                    alert("Entering sleep mode. Click OK to wake up.");
                }
            };
            
            shutdownButton.addEventListener('click', () => performPowerAction('shutdown'));
            restartButton.addEventListener('click', () => performPowerAction('restart'));
            sleepButton.addEventListener('click', () => performPowerAction('sleep'));
        });
    </script>
</body>
</html>
