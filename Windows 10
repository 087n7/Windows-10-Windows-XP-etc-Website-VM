        <div id="shutdown-screen">
            <div class="shutdown-content">
                <img src="https://img.icons8.com/color/96/000000/windows-10.png" alt="Windows Logo" style="width: 100px; margin-bottom: 20px;">
                <h1>Shutting Down</h1>
                <div class="loading-dots">
                    <span>.</span>
                    <span>.</span>
                    <span>.</span>
                </div>
            </div>
        </div>

        <div id="custom-cursor"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const loginScreen = document.getElementById('login-screen');
            const passwordInput = document.getElementById('password-input');
            const loginBtn = document.getElementById('login-btn');
            const loginMessage = document.getElementById('login-message');
            const loadingText = document.querySelector('.loading-text');
            const progressBarContainer = document.querySelector('.progress-bar-container');
            const desktopContainer = document.getElementById('desktop-container');
            const startButton = document.getElementById('start-button');
            const startMenu = document.getElementById('start-menu');
            const shutdownButton = document.getElementById('shutdown-button');
            const desktop = document.getElementById('desktop');
            const taskbarTime = document.getElementById('taskbarTime');
            const taskbarIcons = document.getElementById('taskbar-icons');
            const shutdownScreen = document.getElementById('shutdown-screen');

            // --- Login Logic ---
            loginBtn.addEventListener('click', () => {
                const password = passwordInput.value;
                if (password.toLowerCase() === 'password') {
                    loginMessage.style.display = 'none';
                    loginScreen.classList.add('loading');
                    loadingText.style.display = 'block';
                    progressBarContainer.style.display = 'block';

                    const progressBar = document.querySelector('.progress-bar');
                    let width = 0;
                    const interval = setInterval(() => {
                        width += Math.random() * 10;
                        if (width >= 100) {
                            width = 100;
                            clearInterval(interval);
                            setTimeout(() => {
                                loginScreen.classList.add('fade-out');
                                desktopContainer.style.display = 'block';
                                setTimeout(() => {
                                    loginScreen.style.display = 'none';
                                }, 500);
                            }, 500);
                        }
                        progressBar.style.width = width + '%';
                    }, 100);
                } else {
                    loginMessage.style.display = 'block';
                }
            });

            // --- Start Menu & Taskbar ---
            startButton.addEventListener('click', (event) => {
                event.stopPropagation();
                startMenu.style.display = startMenu.style.display === 'flex' ? 'none' : 'flex';
            });

            document.addEventListener('click', (event) => {
                if (!startMenu.contains(event.target) && !startButton.contains(event.target)) {
                    startMenu.style.display = 'none';
                }
            });

            // --- Power Options ---
            shutdownButton.addEventListener('click', () => {
                startMenu.style.display = 'none';
                shutdownScreen.style.display = 'flex';
                setTimeout(() => {
                    shutdownScreen.classList.add('visible');
                    setTimeout(() => {
                        alert('The system is shutting down.');
                        // You could redirect or hide elements here.
                    }, 3000);
                }, 100);
            });

            // --- Window Management ---
            const windows = document.querySelectorAll('.window');
            const appIcons = document.querySelectorAll('.icon[data-window-target], .start-menu-app[data-window-target]');
            let zIndexCounter = 2000;

            appIcons.forEach(icon => {
                icon.addEventListener('click', () => {
                    const targetWindowId = icon.getAttribute('data-window-target');
                    const targetWindow = document.querySelector(targetWindowId);
                    const appName = icon.getAttribute('data-app-name');
                    if (targetWindow) {
                        openWindow(targetWindow, appName);
                    }
                });
            });

            function openWindow(win, appName) {
                win.style.display = 'flex';
                win.style.zIndex = ++zIndexCounter;
                activateWindow(win);
                createTaskbarItem(win, appName);
            }

            function activateWindow(win) {
                document.querySelectorAll('.window').forEach(w => w.classList.remove('active'));
                win.classList.add('active');
                win.style.zIndex = ++zIndexCounter;
            }

            function createTaskbarItem(win, appName) {
                const existingItem = taskbarIcons.querySelector(`[data-window-target="#${win.id}"]`);
                if (existingItem) {
                    existingItem.classList.add('active');
                    return;
                }

                const taskbarItem = document.createElement('div');
                taskbarItem.className = 'taskbar-item active';
                taskbarItem.setAttribute('data-window-target', `#${win.id}`);
                taskbarItem.innerHTML = `<img src="${win.querySelector('.window-title-bar').previousElementSibling.src}" alt="${appName}">`;

                taskbarItem.addEventListener('click', () => {
                    if (win.style.display === 'none') {
                        win.style.display = 'flex';
                        activateWindow(win);
                    } else if (win.classList.contains('active')) {
                        win.style.display = 'none';
                        taskbarItem.classList.remove('active');
                    } else {
                        activateWindow(win);
                    }
                });
                taskbarIcons.appendChild(taskbarItem);
            }

            windows.forEach(win => {
                const titleBar = win.querySelector('.window-title-bar');
                const closeBtn = win.querySelector('.close-btn');
                const minimizeBtn = win.querySelector('.minimize-btn');
                const maximizeBtn = win.querySelector('.maximize-btn');

                win.addEventListener('mousedown', () => {
                    activateWindow(win);
                });

                closeBtn.addEventListener('click', () => {
                    win.style.display = 'none';
                    const taskbarItem = taskbarIcons.querySelector(`[data-window-target="#${win.id}"]`);
                    if (taskbarItem) {
                        taskbarItem.remove();
                    }
                });

                minimizeBtn.addEventListener('click', () => {
                    win.style.display = 'none';
                    const taskbarItem = taskbarIcons.querySelector(`[data-window-target="#${win.id}"]`);
                    if (taskbarItem) {
                        taskbarItem.classList.remove('active');
                    }
                });

                maximizeBtn.addEventListener('click', () => {
                    if (win.classList.contains('maximized')) {
                        win.classList.remove('maximized');
                    } else {
                        win.classList.add('maximized');
                    }
                });

                // --- Window Dragging ---
                let isDragging = false;
                let offsetX, offsetY;

                titleBar.addEventListener('mousedown', (e) => {
                    if (win.classList.contains('maximized')) return;
                    isDragging = true;
                    offsetX = e.clientX - win.offsetLeft;
                    offsetY = e.clientY - win.offsetTop;
                    win.style.cursor = 'grabbing';
                });

                desktopContainer.addEventListener('mousemove', (e) => {
                    if (!isDragging) return;
                    e.preventDefault();
                    win.style.left = `${e.clientX - offsetX}px`;
                    win.style.top = `${e.clientY - offsetY}px`;
                });

                desktopContainer.addEventListener('mouseup', () => {
                    isDragging = false;
                    win.style.cursor = 'default';
                });
            });

            // --- Taskbar Time Update ---
            function updateTime() {
                const now = new Date();
                const timeString = now.toLocaleTimeString('en-US', {
                    hour: '2-digit',
                    minute: '2-digit'
                });
                const dateString = now.toLocaleDateString('en-US', {
                    day: '2-digit',
                    month: 'short',
                    year: 'numeric'
                });
                taskbarTime.innerHTML = `${timeString}<br>${dateString}`;
            }
            setInterval(updateTime, 1000);
            updateTime();

        });
    </script>
</body>

</html>
